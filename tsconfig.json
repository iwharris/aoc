{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": ["es2016", "es2017", "dom"],

        "alwaysStrict": true,

        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": []
}
